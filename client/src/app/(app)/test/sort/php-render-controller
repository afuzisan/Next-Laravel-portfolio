
public function reorder(Request $request)
{
    // リクエストから新しい順序のアイテムリストを取得
    $items = $request->input('items');
    
    // 各アイテムの順序を更新
    foreach ($items as $index => $item) {
        Item::where('id', $item['id'])->update(['order' => $index]);
    }
    
    // 成功ステータスを返す
    return response()->json(['status' => 'success']);
}
